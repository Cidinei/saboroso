<%- include('./inc/header') -%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Contatos
        </h1>
        <ol class="breadcrumb">
          <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
          <li class="active">Contatos</li>
        </ol>
       
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Lista</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Nome</th>
                  <th>E-mail</th>
                  <th>Mensagem</th>
                  <th style="min-width: 75px;">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(function(row){ %>
                <tr>
                  <td><%= row.id %></td>
                  <td><%= row.name %></td>
                  <td><%= row.email %></td>
                  <td><%= row.message %></td>
                  <td><button type="button" class="btn btn-xs btn-danger btn-delete"
                    onclick="actionDelete(this, 'contacts')" data-id="<%= row.id %>" data-title="<%= row.name %>"
                    ><i class="fa fa-trash"></i> Excluir</button></td>
                </tr>
                <% })%>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

<%- include('./inc/footer') -%>
<script>
// To make Pace works on Ajax calls
$(document).ajaxStart(function () {
    Pace.restart()
  })
  $('.ajax').click(function () {
    $.ajax({
      url: '#', success: function (result) {
        $('.ajax-content').html('<hr>Ajax Request Completed !')
      }
    })
  })


  actionDelete = (btn, acao)=>{  
      let id = btn.dataset.id;
      let title = btn.dataset.title;
      option = { method: 'delete' };
      if (confirm(`Excluir o item ${acao}: id = ${id} de nome ${title}`)){

        fetch(`/admin/${acao}/${id}`, option)
          .then(response=>response.json())
          .then(json=>{
            window.location.reload();
          });
      }    
    }; 
  </script>