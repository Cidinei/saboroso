<%- include('./inc/header') -%>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Menu
        </h1>
        <ol class="breadcrumb">
          <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
          <li class="active">Menu</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content container-fluid">

        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Lista</h3>
            <button type="button" class="btn btn-xs pull-right btn-success btn-insert" 
                  data-aux='{"screen":"menus","title":"Novo Menu", , "hidden":"idc"}'>
                <i class="fa fa-plus"></i> Novo</button>
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Foto</th>
                  <th>Título</th>
                  <th>Descrição</th>
                  <th>Preço</th>
                  <th style="min-width: 134px;">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach(function(row){ %>
                  <tr>
                    <td><%= row.id %></td>
                    <td><img src="/<%= row.photo %>" alt="" style="height: 18px;"></td>
                    <td><%= row.title %></td>
                    <td><%= row.description %></td>
                    <td><%= row.price %></td>
                    <td><button type="button" id="edit" class="btn btn-xs btn-info btn-update"
                      data-row='<%= JSON.stringify(row);%>' data-aux='{"screen":"menus","title":"Alteração de Reserva", "hidden":"idc"}'>
                        <i class="fa fa-pencil"></i> Editar</button>&nbsp;<button type="button" 
                          class="btn btn-xs btn-danger btn-delete" 
                          data-aux='{"id":<%=row.id%>, "screen":"menus", "title":"<%=row.title%>"}'>
                          <i class="fa fa-trash" ></i> Excluir</button></td>
                  </tr>
                <%})%>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <div class="modal fade" id="modal-create">
      <div class="modal-dialog">
        <div class="modal-content" style="border-top: 3px solid #00a65a;">
          <form method="post">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title">Novo Menu</h4>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="inputTitleCreate">Título</label>
                <input type="text" class="form-control" id="inputTitleCreate" name="title">
                <input type="hidden" class="form-control" id="idc" name="id" value="">
              </div>
              <div class="form-group">
                <label for="inputDescriptionCreate">Descrição</label>
                <textarea class="form-control" id="inputDescriptionCreate" name="description"></textarea>
              </div>
              <div class="form-group">
                <label for="inputPriceCreate">Preço</label>
                <input type="number" class="form-control" id="inputPriceCreate" name="price">
              </div>
              <div class="form-group">
                <label for="inputPhotoCreate">Foto</label>
                <img  style="max-width: 128px; max-height: 128px; display: block;" src="dist/img/boxed-bg.jpg">
                <input type="file" class="form-control" id="inputPhotoCreate" name="photo">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-success btn-submit">Salvar</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    
<%- include('./inc/footer') -%>

<script src='/js/LcomFileReader.js'></script>
<script src="/js/lcomFormSave.js"></script>
<script src="/js/hcod-grid.js"></script>
<script>
  new LcomFileReader('#modal-create [type=file]', '#modal-create img');
  new HcodGrid({});
</script>